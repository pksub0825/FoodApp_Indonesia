<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/popular_images"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/popularfood1" />

    <TextView
        android:id="@+id/popular_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="popular_images"
        app:layout_constraintEnd_toEndOf="@+id/popular_images"
        app:layout_constraintStart_toStartOf="@+id/popular_images"
        app:layout_constraintTop_toBottomOf="@+id/popular_images" />
</androidx.constraintlayout.widget.ConstraintLayout>
